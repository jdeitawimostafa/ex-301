<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <img src="/img/maybelline.jpg" alt="">
        <a href="/">Home</a>
        <a href="/getall">All products</a>
        <a href="/getdatabase">My products</a>
    </header>
    <section>
        <% productsArr.forEach(items => { %>
            <img src="<%= items.image_link %>" alt="">
            <h2><%= items.name %></h2>
            <h4><%= items.price %></h4>
            <a href="/details/<%=items.id%>">View Details</a>
        <% }); %>
    </section>
</body>
</html>

